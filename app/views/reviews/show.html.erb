<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-lg-6 col-lg-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
            	<span class="text-center">Thank you for your feedback, <%=@reviewer.name%>!</span>
            </div>
            <div class="panel-body">
        		<div class="pull-left"><%= gravatar_for(@user, size: 100) %></div>
        		<p> Are you satisfied? 
                <% if @review.satisfied%>
                   <i class="fa fa-thumbs-o-up" aria-hidden="true"></i> yes! 
                <%else%>
                    <i class="fa fa-thumbs-o-down" aria-hidden="true"></i> no!
                <%end%>          
                </p>
        		<p class="comment"> <%=@review.comment%></p>
            </div>
            <%= link_to 'Back to home page', home_path , class: "btn btn-default btn-lg btn-block" %>
        </div>
    </div>
</div>