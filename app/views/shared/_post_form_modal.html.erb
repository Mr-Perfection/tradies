<!-- post-form Modal -->
<div class="modal fade" id="post-form" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" id = "finished" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h3 class="modal-title text-center" id="myModalLabel">Create Post</h3>
      </div>
      <div class="modal-body">
        <%if current_user.has_valid_wepay_access_token? && current_user.has_wepay_account?%>
      	 <%= render partial: 'shared/post_form_wepay', locals: {post: post, button_text: "Create post"} %>
        <% else %>
          <%= render partial: 'shared/post_form', locals: {post: post, button_text: "Create post"} %>
        <% end %>
      	<p>By creating a post, I agree to Tradiesâ€™s <span style="color: gray;"><i><%= link_to "Terms of Use", '/TermsOfUse' %></i></span> and <span style="color: gray;"><i><%= link_to "Privacy Policy", '/PrivacyPolicy' %></i></span>.</p>
      </div>
      <%if current_user.has_valid_wepay_access_token? && current_user.has_wepay_account?%>
        <div class="modal-footer">
          <div class="text-center">
            <h3 style="color:white;">Tradies App Fee <small style="color:white;"></small></h3>
            <p>$0.00 - $99.99 <span class="glyphicon glyphicon-arrow-right"></span> 4.4% + $0.30</p>
            <p>$100.00 - $999.99 <span class="glyphicon glyphicon-arrow-right"></span> 3.9% + $0.30</p>
            <p>$1000.00 - $9,999.99 <span class="glyphicon glyphicon-arrow-right"></span> 3.4% + $0.30</p>
            <p>$10,000.00 or more <span class="glyphicon glyphicon-arrow-right"></span> 3.15% + $0.30</p>
          </div>
          <div class="text-center"><small style="color:white;">Please, note that Tradies App Fee only applies to you or a seller when you accept the payment from the buyer via our secure Tradies Checkout.</small></div>
        </div>
      <% end %>
    </div>
  </div>
</div>